@page "/languages"
@inherits MyLanguagesBase
<h1>Languages</h1>
<br>
<table class="table table-hover">
  <thead>
      <tr>
          <th class="d-none d-lg-block">&nbsp;</th>
          <th class="d-lg-none">&nbsp;</th>
          <th>Speaking</th>
          <th>Writing</th>
          <th>Reading</th>
      </tr>
  </thead>
  <tbody>
      @foreach (var language in Languages)
      {
        <tr>
          <td class="d-lg-none">
              <img src="@language.PathToFlag" width="40" height="20" alt="@language.AltTextFlag"
                  title="Dutch">
          </td>
          <td class="d-none d-lg-block" style="text-align: center;">
              <img src="@language.PathToFlag" width="80" height="40" alt="@language.AltTextFlag"
                  title="Dutch">
          </td>
          <td>@language.Speaking</td>
          <td>@language.Writing</td>
          <td>@language.Reading</td>
        </tr>
      }
  </tbody>
</table>